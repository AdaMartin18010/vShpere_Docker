# Makefile for Go API Tests

.PHONY: all test test-docker test-k8s test-etcd test-integration clean deps coverage help report

# é»˜è®¤ç›®æ ‡
all: test

# å®‰è£…ä¾èµ–
deps:
	@echo "ğŸ“¦ Installing Go dependencies..."
	go mod download
	go mod tidy

# è¿è¡Œæ‰€æœ‰æµ‹è¯•
test:
	@echo "ğŸ§ª Running all API tests..."
	go test -v -timeout 30m ./...

# è¿è¡ŒDocker APIæµ‹è¯•
test-docker:
	@echo "ğŸ³ Running Docker API tests..."
	go test -v -timeout 10m -run TestDockerAPI

# è¿è¡ŒKubernetes APIæµ‹è¯•
test-k8s:
	@echo "â˜¸ï¸  Running Kubernetes API tests..."
	go test -v -timeout 15m -run TestKubernetesAPI

# è¿è¡Œetcd APIæµ‹è¯•
test-etcd:
	@echo "ğŸ—„ï¸  Running etcd API tests..."
	go test -v -timeout 10m -run TestEtcdAPI

# è¿è¡Œé›†æˆæµ‹è¯•
test-integration:
	@echo "ğŸ”— Running integration tests..."
	go test -v -timeout 30m -run TestIntegrationSuite

# è¿è¡Œæµ‹è¯•å¹¶ç”Ÿæˆè¦†ç›–ç‡æŠ¥å‘Š
coverage:
	@echo "ğŸ“Š Generating coverage report..."
	go test -v -timeout 30m -coverprofile=coverage.out ./...
	go tool cover -html=coverage.out -o coverage.html
	@echo "âœ… Coverage report generated: coverage.html"

# è¿è¡Œæµ‹è¯•å¹¶è¾“å‡ºJSONæ ¼å¼
test-json:
	@echo "ğŸ“„ Running tests with JSON output..."
	go test -v -timeout 30m -json ./... > test-report.json

# å¿«é€Ÿæµ‹è¯• (è·³è¿‡é•¿æµ‹è¯•)
test-fast:
	@echo "âš¡ Running fast tests..."
	go test -v -short -timeout 5m ./...

# ç”Ÿæˆæµ‹è¯•æŠ¥å‘Š (HTML + JSON + Markdown)
report: test-json
	@echo "ğŸ“Š Generating test reports..."
	@if [ -f test-report.json ]; then \
		echo "âœ… JSON report: test-report.json"; \
		echo "ğŸ“ To generate HTML/Markdown reports, implement report generation logic"; \
	fi

# æ¸…ç†æµ‹è¯•äº§ç‰©
clean:
	@echo "ğŸ§¹ Cleaning test artifacts..."
	rm -f coverage.out coverage.html test-report.json
	rm -f *.prof
	rm -f report.html report.json report.md
	go clean -testcache

# è¿è¡ŒåŸºå‡†æµ‹è¯•
bench:
	@echo "â±ï¸  Running benchmarks..."
	go test -bench=. -benchmem ./...

# æ ¼å¼åŒ–ä»£ç 
fmt:
	@echo "ğŸ¨ Formatting code..."
	go fmt ./...

# ä»£ç æ£€æŸ¥
lint:
	@echo "ğŸ” Running linter..."
	@which golangci-lint > /dev/null || (echo "Installing golangci-lint..." && go install github.com/golangci/golangci-lint/cmd/golangci-lint@latest)
	golangci-lint run

# è¿è¡Œç«æ€æ£€æµ‹
test-race:
	@echo "ğŸ Running tests with race detector..."
	go test -v -race -timeout 30m ./...

# è¿è¡Œæ‰€æœ‰æ£€æŸ¥ (æ ¼å¼åŒ– + lint + æµ‹è¯• + è¦†ç›–ç‡)
check: fmt lint test coverage
	@echo "âœ… All checks passed!"

